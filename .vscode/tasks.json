{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "go: build",
      "type": "shell",
      "command": "go",
      "args": ["build", "./..."],
      "group": "build",
      "problemMatcher": ["$go"],
      "detail": "Build the Go application.",
      "dependsOn": ["go: fmt"]
    },
    {
      "label": "go: test",
      "type": "shell",
      "command": "go",
      "args": ["test", "./..."],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$go"],
      "detail": "Run all Go tests in the project.",
      "dependsOn": ["go: fmt", "go: lint", "go: build"]
    },
    {
      "label": "go: clean",
      "type": "shell",
      "command": "go",
      "args": ["clean"],
      "group": "none",
      "problemMatcher": [],
      "detail": "Clean Go build files."
    },
    {
      "label": "go: lint",
      "type": "shell",
      "command": "golangci-lint",
      "args": ["run", "--fix", "./..."],
      "group": "build",
      "problemMatcher": ["$golangci-lint"],
      "detail": "Run golangci-lint for static code analysis.",
      "dependsOn": ["go: build"]
    },
    {
      "label": "go: fmt",
      "type": "shell",
      "command": "go",
      "args": ["fmt", "./..."],
      "group": "none",
      "problemMatcher": [],
      "detail": "Format Go code using go fmt.",
      "dependsOn": ["go: mod tidy"]
    },
    {
      "label": "go: mod tidy",
      "type": "shell",
      "command": "go",
      "args": ["mod", "tidy"],
      "group": "none",
      "problemMatcher": [],
      "detail": "Run go mod tidy to clean up dependencies."
    }
  ]
}
